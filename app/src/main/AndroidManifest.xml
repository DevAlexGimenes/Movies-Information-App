<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alex.movie.information.app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieInformationApp">
        <activity
            android:name=".presentation.movies.DetailsMovieInformationActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.movies.top.rated.TopRatedMoviesActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.movies.now.playing.NowPlayingMoviesActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.movies.popular.PopularMoviesActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.home.HomeActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.splash.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>